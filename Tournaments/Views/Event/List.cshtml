@model Tournaments.ViewModels.EventDetailsViewModel

@*<br />*@

<div class="container">
    <div class="row">
        <h2>

          Tournament: @Model.Tournament.TournamentName


        </h2>
        @Html.ActionLink("Create event", "Create", "Event", new { id = Model.Tournament.TournamentID }, null)
        @*<input type="button" class="btn btn-primary"  onclick="@("window.location.href='" + @Url.Action("wwww","Create", "Event", new { id = (int)Model.Tournament.TournamentID}), null + "'");" />*@
    </div>


    @if (TempData["AlertMessage"] != null)
    {
        <div class="alert alert-success">
            <strong>Success!</strong> @TempData["AlertMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (TempData["AlertMessageDel"] != null)
    {

        <div class="alert alert-danger">
            <stong>Success!</stong> @TempData["AlertMessageDel"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
</div>
<br />

<div class="container-fluid padding">
    <div class="row">
        <div class="row padding">
            @foreach (var item in Model.Event)
            {

                <div class="col-9 col-md-2 col-lg-5">
                    @Html.Partial("_ListCards", item)
                    @*<partial name="_ListCards" model=@item />*@
                </div>
            }
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index", "Tournament", null, null)
</div>